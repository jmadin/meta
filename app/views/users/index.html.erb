
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <h1>People</h1>

    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Datasets</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= link_to "#{user.first_name} #{user.last_name}", user %></td>
            <td><%= user.email %></td>
            <td><%= user.datasets.size %></td>
            <td>
              <% if current_user.admin %>
                <%= user.admin %>
                <% if !current_user?(user) %>
                  <%= link_to "Delete", user, method: :delete, data: { confirm: "You sure?" } %>
                <% end %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>